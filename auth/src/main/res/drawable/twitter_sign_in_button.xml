        <stroke android:width="@dimen/border_dimen" android:color="@color/fui_bgTwitter" />
        <corners android:radius="3dp"/>
        <solid android:color="@color/fui_bgTwitterDarker" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/border_dimen" android:color="@color/fui_bgTwitter" />
        <corners android:radius="3dp"/>
        <solid android:color="@color/fui_bgTwitter" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/border_dimen" android:color="@color/fui_bgTwitter" />
