<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/border_dimen" android:color="@color/colorPrimaryDark" />
        <corners android:radius="3dp"/>
        <solid android:color="#FF283593" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/border_dimen" android:color="@color/colorPrimary" />
        <corners android:radius="3dp"/>
        <solid android:color="#3C5A99" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/border_dimen" android:color="@color/colorPrimary" />
        <corners android:radius="3dp"/>
        <solid android:color="#3C5A99" />
    </shape>
</item>

</selector>